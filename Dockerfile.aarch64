FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install build tools and Qt5
RUN apt-get update && \
    apt-get install -y \
    build-essential \
    gcc \
    g++ \
    cmake \
    pkg-config \
    curl \
    git \
    qtbase5-dev \
    libqt5core5a \
    libqt5gui5

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

WORKDIR /workspace

# Build for ARM64 (native)
CMD ["cargo", "build", "--release"]
