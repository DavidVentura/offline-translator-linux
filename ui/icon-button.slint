import { AppTheme } from "theme.slint";

export component IconButton {
    in property <image> icon;
    in property <length> size: 24px;
    in property <bool> enabled: true;
    callback clicked();

    width: size + 16px;
    height: size + 16px;

    touch-area := TouchArea {
        clicked => {
            if (root.enabled) {
                root.clicked();
            }
        }
    }

    Rectangle {
        border-radius: 8px;
        background: touch-area.pressed && root.enabled ? AppTheme.surface-alt : transparent;

        Image {
            source: root.icon;
            width: root.size;
            height: root.size;
            colorize: root.enabled ? AppTheme.icon-color : AppTheme.icon-color-disabled;
        }
    }
}
